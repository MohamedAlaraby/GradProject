
<resources
    xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style
        name="Theme.GradProject"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorPrimaryVariant">#08B7CF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
                   tools:targetApi="l">@color/dark_blue</item>
        <!-- Customize your theme here. -->
    </style>




    <style name="Theme.GradProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.GradProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.GradProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="RippleStyleGray">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80808080</item>
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleDuration">1000</item>
    </style>
</resources>